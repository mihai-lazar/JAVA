package ControlTransformado;

public class Gambler 
{
	public static int Trials(int s, int g)
	{
		while(s != 0 && s != g) {
			if(Math.random() < 0.5) {
				s--;
			}else{
				s++;
			}
			if(s == g){
				return 1;
			}
			if(s == 0){
				return 0;
			}
		}
	}
	
	public static void main(String[] args) {
		int stakeInicial = Integer.parseInt(args[0]);
		int goal = Integer.parseInt(args[1]);
		int trials = Integer.parseInt(args[2]);
		int ganadas = 0;
		int perdidas = 0;
		
		int stake = stakeInicial;
		
		for(int i = 0; i < trials; i++) {
			ganadas = ganadas + Trials(stake, goal);
			stake = stakeInicial;
		}
		
		System.out.println("wins: " + ganadas + " and losses: " + trial - ganadas + " of " + trials + " trials");

	}

}
