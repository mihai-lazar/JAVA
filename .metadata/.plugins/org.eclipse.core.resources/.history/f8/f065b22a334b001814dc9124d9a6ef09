package asistentePOO;

public class Noticia {
	private String nombre;
	private String url;
	private EstadoNoticia estadoActual = EstadoNoticia.NO_VISTA;
	
	public Noticia(String nombre, String url) {
	    this.nombre = nombre;
	    this.url = url;
	}
	
	public String getNombre() {
	    return nombre;
	}
	
	public void setVista() {
		estadoActual = EstadoNoticia.VISTA;
	}
	
	public EstadoNoticia getEstado() {
		return estadoActual;
	}
	
	public String getUrl() {
		return url;
	}
	
}

